<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout style="@style/ll">

            <TextView
                style="@style/text_left_ll"
                android:text="报案号:" />

            <TextView
                android:id="@+id/banan_num"
                style="@style/text_right_ll" />
        </LinearLayout>

        <include layout="@layout/item_line" />

        <LinearLayout style="@style/ll">

            <TextView
                android:id="@+id/tv_baoan_name"
                style="@style/text_left_ll"
                android:text="报案人姓名:" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/text_right_ll"
                android:hint="请输入报案人姓名" />
        </LinearLayout>

        <include layout="@layout/item_line" />

        <LinearLayout style="@style/ll">

            <TextView
                style="@style/text_left_ll"
                android:text="报案人电话:" />

            <TextView
                android:id="@+id/et_mobile"
                style="@style/text_right_ll"
                android:hint="请输入报案人电话" />
        </LinearLayout>

        <include layout="@layout/item_line" />

        <LinearLayout style="@style/ll">

            <TextView
                android:id="@+id/tv_baoan_deal"
                style="@style/text_left_ll"
                android:text="投保单号:" />

            <TextView
                android:id="@+id/banan_danhao"
                style="@style/text_right_ll"
                android:hint="请输入投保单号" />
        </LinearLayout>

        <include layout="@layout/item_line" />

        <LinearLayout style="@style/ll">

            <TextView
                style="@style/text_left_ll"
                android:text="出险地址:" />

            <TextView
                android:id="@+id/chuxian_address"
                style="@style/text_right_ll"
                android:hint="请输入出险地址" />
        </LinearLayout>

        <include layout="@layout/item_line" />
        <LinearLayout style="@style/ll">

            <TextView
                style="@style/text_left_ll"
                android:text="标地名称:" />

            <TextView
                android:id="@+id/biaodi_mi"
                style="@style/text_right_ll"
                android:hint="标地名称" />
        </LinearLayout>

        <include layout="@layout/item_line" />
        <LinearLayout style="@style/ll">

            <TextView
                style="@style/text_left_ll"
                android:text="出险时间:" />

            <TextView
                android:id="@+id/tv_chuxian_date"
                style="@style/text_right_ll" />
        </LinearLayout>

        <include layout="@layout/item_line" />

        <LinearLayout style="@style/ll">

            <TextView
                style="@style/text_left_ll"
                android:text="报案时间:" />

            <TextView
                android:id="@+id/tv_baoan_date"
                style="@style/text_right_ll" />
        </LinearLayout>

        <include layout="@layout/item_line" />

        <LinearLayout style="@style/ll">

            <TextView
                style="@style/text_left_ll"
                android:text="出险原因:" />

            <TextView
                android:id="@+id/tv_chuxian_reason"
                style="@style/text_right_ll" />
        </LinearLayout>

        <include layout="@layout/item_line" />

        <LinearLayout style="@style/ll">

            <TextView
                style="@style/text_left_ll"
                android:text="出险数量:" />

            <TextView
                android:id="@+id/et_chuxian_num"
                style="@style/text_right_ll"
                android:hint="请输入出险数量" />
        </LinearLayout>

        <include layout="@layout/item_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_80"
            android:layout_margin="@dimen/size_6"
            android:background="@drawable/four_conner_no_stroke_six_gray">

            <TextView
                android:id="@+id/input_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size_4"
                android:background="@null"
                android:gravity="top"
                android:hint="出险经过..."
                android:maxLength="500"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14sp" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
