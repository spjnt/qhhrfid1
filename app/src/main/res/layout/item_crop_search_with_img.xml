<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_right"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_2"
    android:layout_marginLeft="@dimen/size_4"
    android:layout_marginRight="@dimen/size_4"
    android:elevation="@dimen/size_1"
    android:padding="@dimen/size_1"
    android:translationZ="@dimen/size_3"
    app:cardCornerRadius="@dimen/size_8"
    app:cardUseCompatPadding="true">>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/land_iv"
            android:orientation="vertical"
            android:padding="@dimen/size_4">

            <TextView
                android:id="@+id/land_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/land_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_6"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/land_square"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/size_6"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/land_iv"
            android:layout_width="@dimen/size_60"
            android:layout_height="@dimen/size_50"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>