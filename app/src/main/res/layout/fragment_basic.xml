<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout style="@style/ll">

            <TextView
                style="@style/text_left_ll"
                android:text="被保险人:" />

            <TextView
                android:id="@+id/tv_chuxian_date"
                style="@style/text_right_ll" />
        </LinearLayout>

        <include layout="@layout/item_line" />

        <LinearLayout style="@style/ll">

            <TextView
                style="@style/text_left_ll"
                android:text="证件类型:" />

            <TextView
                android:id="@+id/tv_baoan_date"
                style="@style/text_right_ll" />
        </LinearLayout>

        <include layout="@layout/item_line" />

        <LinearLayout style="@style/ll">

            <TextView
                style="@style/text_left_ll"
                android:text="证件号码:" />

            <TextView
                android:id="@+id/tv_chuxian_reason"
                style="@style/text_right_ll" />
        </LinearLayout>

        <include layout="@layout/item_line" />
        <LinearLayout style="@style/ll">

            <TextView
                style="@style/text_left_ll"
                android:text="投保单号:" />

            <TextView
                android:id="@+id/banan_num"
                style="@style/text_right_ll" />
        </LinearLayout>

        <include layout="@layout/item_line" />

        <LinearLayout style="@style/ll">

            <TextView
                style="@style/text_left_ll"
                android:text="标的地址:" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/text_right_ll" />
        </LinearLayout>

        <include layout="@layout/item_line" />

        <LinearLayout style="@style/ll">

            <TextView
                style="@style/text_left_ll"
                android:text="险       种:" />

            <TextView
                android:id="@+id/et_mobile"
                style="@style/text_right_ll" />
        </LinearLayout>

        <include layout="@layout/item_line" />

        <LinearLayout style="@style/ll">

            <TextView
                style="@style/text_left_ll"
                android:text="承保数量:" />

            <TextView
                android:id="@+id/insure_num"
                style="@style/text_right_ll" />
        </LinearLayout>

        <include layout="@layout/item_line" />

        <LinearLayout style="@style/ll">

            <TextView
                style="@style/text_left_ll"
                android:text="保险金额:" />

            <TextView
                android:id="@+id/banan_danhao"
                style="@style/text_right_ll" />
        </LinearLayout>

        <include layout="@layout/item_line" />

        <LinearLayout style="@style/ll">

            <TextView
                style="@style/text_left_ll"
                android:text="保险时间:" />

            <TextView
                android:id="@+id/chuxian_address"
                style="@style/text_right_ll" />
        </LinearLayout>

        <include layout="@layout/item_line" />






        <LinearLayout style="@style/ll">

            <TextView
                style="@style/text_left_ll"
                android:text="开户银行:" />

            <TextView
                android:id="@+id/bank_name"
                style="@style/text_right_ll" />
        </LinearLayout>

        <include layout="@layout/item_line" />

        <LinearLayout style="@style/ll">

            <TextView
                style="@style/text_left_ll"
                android:text="银行卡号:" />

            <TextView
                android:id="@+id/bank_number"
                style="@style/text_right_ll" />
        </LinearLayout>

        <include layout="@layout/item_line" />

        <LinearLayout
            style="@style/ll"
            android:visibility="gone">

            <TextView
                style="@style/text_left_ll"
                android:text="开户人姓名:" />

            <TextView
                android:id="@+id/bank_open"
                style="@style/text_right_ll" />
        </LinearLayout>

        <include layout="@layout/item_line" />
    </LinearLayout>

</ScrollView>
