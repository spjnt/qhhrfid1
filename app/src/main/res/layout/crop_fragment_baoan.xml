<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout style="@style/ll">
            <TextView android:text="报   案   号:" style="@style/text_left_ll"/>
            <TextView android:id="@+id/banan_num" style="@style/text_right_ll"/>
        </LinearLayout>
        <include layout="@layout/gray_line_s"/>
        <LinearLayout style="@style/ll">
            <TextView android:text="报案人姓名:" style="@style/text_left_ll_big"/>
            <TextView android:id="@+id/tv_baoan_name" android:hint="请输入报案人姓名" style="@style/text_right_ll"/>
        </LinearLayout>
        <include layout="@layout/gray_line_s"/>
        <LinearLayout style="@style/ll">
            <TextView android:text="报案人电话:" style="@style/text_left_ll_big"/>
            <TextView android:id="@+id/et_mobile" android:hint="请输入报案人电话" style="@style/text_right_ll"/>
        </LinearLayout>
        <include layout="@layout/gray_line_s"/>
        <LinearLayout style="@style/ll">
            <TextView android:text="保   单   号:" style="@style/text_left_ll"/>
            <TextView android:id="@+id/banan_danhao" android:hint="请输入投保单号" style="@style/text_right_ll"/>
        </LinearLayout>
        <include layout="@layout/gray_line_s"/>
        <LinearLayout android:visibility="gone" style="@style/ll">
            <TextView android:textSize="@dimen/size_16" android:textColor="@color/black" android:gravity="right" android:layout_gravity="center_vertical" android:layout_width="@dimen/size_80" android:layout_height="wrap_content" android:text="标地名称:" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/size_16" android:textColor="@color/black" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/address" android:background="@null" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="请输入标地名称" android:layout_toRightOf="@+id/insure_num" android:inputType="number"/>
        </LinearLayout>
        <LinearLayout style="@style/ll">
            <TextView android:text="出险地址:" style="@style/text_left_ll"/>
            <TextView android:id="@+id/chuxian_address" android:hint="请输入出险地址" style="@style/text_right_ll"/>
        </LinearLayout>
        <include layout="@layout/gray_line_s"/>
        <LinearLayout style="@style/ll">
            <TextView android:text="出险时间:" style="@style/text_left_ll"/>
            <TextView android:id="@+id/tv_chuxian_date" style="@style/text_right_ll"/>
        </LinearLayout>
        <include layout="@layout/gray_line_s"/>
        <LinearLayout style="@style/ll">
            <TextView android:text="报案时间:" style="@style/text_left_ll"/>
            <TextView android:id="@+id/tv_baoan_date" style="@style/text_right_ll"/>
        </LinearLayout>
        <include layout="@layout/gray_line_s"/>
        <LinearLayout style="@style/ll">
            <TextView android:text="出险原因:" style="@style/text_left_ll"/>
            <TextView android:id="@+id/tv_chuxian_reason" style="@style/text_right_ll"/>
        </LinearLayout>
        <include layout="@layout/gray_line_s"/>
        <LinearLayout style="@style/ll">
            <TextView android:text="险        种:" style="@style/text_left_ll"/>
            <TextView android:id="@+id/damage_qty" android:hint="险种" style="@style/text_right_ll"/>
        </LinearLayout>
        <include layout="@layout/gray_line_s"/>
        <RelativeLayout android:background="@drawable/four_conner_no_stroke_six_gray" android:layout_width="match_parent" android:layout_height="@dimen/size_80" android:layout_margin="@dimen/size_6">
            <TextView android:textSize="@dimen/text_size_14sp" android:textColor="@color/black" android:gravity="top" android:id="@+id/input_info" android:background="@null" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="@dimen/size_4" android:text="" android:hint="出险经过..." android:maxLength="500"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
