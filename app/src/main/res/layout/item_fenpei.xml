        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_2"
        android:layout_marginLeft="@dimen/size_4"
        android:layout_marginRight="@dimen/size_4"
        android:elevation="@dimen/size_1"
        android:padding="@dimen/size_1"
        android:translationZ="@dimen/size_3"
        app:cardCornerRadius="@dimen/size_8"
        app:cardUseCompatPadding="true">

        <include layout="@layout/item_lipei_common" />
    </androidx.cardview.widget.CardView>
