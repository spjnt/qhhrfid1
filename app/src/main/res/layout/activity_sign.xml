<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/size_10"
    android:background="@color/e6">

    <ImageView
        android:id="@+id/iv_sign"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <tramais.hnb.hhrfid.ui.view.LinePathView
        android:id="@+id/line_path"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/size_1"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_6sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="@dimen/size_4">

        <TextView
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_no_conner"
            android:gravity="center"
            android:padding="@dimen/size_6"
            android:text="清除"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_6sp" />

        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5"
            android:background="@drawable/small_conner_new"
            android:gravity="center"
            android:padding="@dimen/size_6"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_6sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="right"
      >

        <ImageView
            android:id="@+id/iv_rem_pass"
            android:layout_width="@dimen/size_12"
            android:layout_height="@dimen/size_12"
            android:layout_gravity="center_vertical"
            android:src="@drawable/remember_pwd" />

        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/size_4"
            android:text="@string/checkbox_text"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_6sp"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>
