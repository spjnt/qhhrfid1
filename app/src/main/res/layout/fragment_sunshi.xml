<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout style="@style/ll">

            <TextView
                style="@style/text_left_ll"
                android:text="种类" />

            <TextView
                style="@style/text_left_ll"
                android:text="雪灾"
                android:textColor="@color/new_theme" />

            <TextView
                style="@style/text_left_ll"
                android:text="疾病"
                android:textColor="@color/new_theme" />

            <TextView
                style="@style/text_left_ll"
                android:layout_width="@dimen/size_90"
                android:text="野生动物伤害"
                android:textColor="@color/new_theme" />

            <TextView
                style="@style/text_left_ll"
                android:text="其他"
                android:textColor="@color/new_theme" />
        </LinearLayout>

        <LinearLayout style="@style/ll">

            <TextView
                style="@style/text_left_ll"
                android:text="藏系羊死亡" />

            <EditText
                android:id="@+id/et_sheep_snow"
                style="@style/text_left_ll"
                android:inputType="number"
                android:text=""
                android:textColor="@color/login_button" />

            <EditText
                android:id="@+id/et_sheep_ill"
                style="@style/text_left_ll"
                android:inputType="number"
                android:text=""
                android:textColor="@color/login_button" />

            <EditText
                android:id="@+id/et_sheep_animal"
                style="@style/text_left_ll"
                android:layout_width="@dimen/size_90"
                android:inputType="number"
                android:text=""
                android:textColor="@color/login_button" />

            <EditText
                android:id="@+id/et_sheep_other"
                style="@style/text_left_ll"
                android:inputType="number"
                android:text=""
                android:textColor="@color/login_button" />
        </LinearLayout>

        <include layout="@layout/item_line" />

        <LinearLayout style="@style/ll">

            <TextView
                style="@style/text_left_ll"
                android:text="藏牦牛死亡" />

            <EditText
                android:id="@+id/et_cow_snow"
                style="@style/text_left_ll"
                android:inputType="number"
                android:text=""
                android:textColor="@color/login_button" />

            <EditText
                android:id="@+id/et_cow_ill"
                style="@style/text_left_ll"
                android:inputType="number"
                android:text=""
                android:textColor="@color/login_button" />

            <EditText
                android:id="@+id/et_cow_animal"
                style="@style/text_left_ll"
                android:layout_width="@dimen/size_90"
                android:inputType="number"
                android:text=""
                android:textColor="@color/login_button" />

            <EditText
                android:id="@+id/et_cow_other"
                style="@style/text_left_ll"
                android:inputType="number"
                android:text=""
                android:textColor="@color/login_button" />
        </LinearLayout>

        <include layout="@layout/item_line" />

        <LinearLayout style="@style/ll">

            <TextView
                style="@style/text_left_ll_big"
                android:text="案情是否属实:" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/is_truth_true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_50"
                android:text="是"
                android:textColorHint="@color/login_button" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/is_truth_false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_50"
                android:text="否"
                android:textColorHint="@color/login_button" />
        </LinearLayout>

        <include layout="@layout/item_line" />

        <LinearLayout style="@style/ll">

            <TextView
                style="@style/text_left_ll_big"
                android:text="是否佩戴耳标:" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/is_tag_true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_50"
                android:text="是"
                android:textColorHint="@color/login_button" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/is_tag_false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_50"
                android:text="否"
                android:textColorHint="@color/login_button" />
        </LinearLayout>

        <include layout="@layout/item_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40">

            <TextView
                style="@style/text_left_ll_big"
                android:text="证  明  资  料:" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_10"
                android:text="气象证明"
                android:textColorHint="@color/login_button" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/is_zhengming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_4"
                android:text="防疫证明"
                android:textColorHint="@color/login_button" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/is_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_4"
                android:text="其他证明"
                android:textColorHint="@color/login_button" />
        </LinearLayout>

        <include layout="@layout/item_line" />

        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginTop="@dimen/size_40"
            android:layout_marginRight="@dimen/size_20"
            android:layout_marginBottom="@dimen/size_20"
            android:background="@drawable/big_conner_new"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14sp" />
    </LinearLayout>
</ScrollView>
