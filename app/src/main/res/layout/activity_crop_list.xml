<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <Button android:textSize="@dimen/text_size_18sp" android:textColor="@color/white" android:id="@+id/regist_new" android:background="@drawable/small_conner_new" android:layout_width="match_parent" android:layout_height="@dimen/size_45" android:layout_marginLeft="@dimen/size_10" android:layout_marginTop="@dimen/size_5" android:layout_marginRight="@dimen/size_10" android:text="创建投保人"/>
    <RelativeLayout android:id="@+id/top_seacrch" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size_10" android:layout_marginTop="@dimen/size_6" android:layout_marginRight="@dimen/size_10" android:layout_below="@+id/regist_new">
        <LinearLayout android:background="@drawable/bottom_no_conner" android:layout_width="match_parent" android:layout_height="@dimen/size_40" android:layout_marginRight="@dimen/size_5" android:layout_toLeftOf="@+id/btn_search">
            <ImageView android:layout_gravity="center_vertical" android:layout_width="@dimen/size_20" android:layout_height="@dimen/size_20" android:layout_marginLeft="@dimen/size_10" android:src="@mipmap/icon_sousuo"/>
            <EditText android:textSize="@dimen/text_size_14sp" android:textColor="@color/black" android:id="@+id/et_search" android:background="@null" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/size_10" android:hint="请输入投保人姓名/电话号码"/>
        </LinearLayout>
        <Button android:textSize="@dimen/text_size_16sp" android:textColor="@color/white" android:id="@+id/btn_search" android:background="@drawable/small_conner_new" android:layout_width="@dimen/size_80" android:layout_height="@dimen/size_40" android:layout_marginRight="@dimen/size_5" android:text="查找" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="@dimen/size_40" android:layout_marginTop="@dimen/size_4" android:layout_above="@+id/ll_bottom_page" android:layout_below="@+id/top_seacrch">
        <LinearLayout android:layout_width="match_parent" android:layout_height="@dimen/size_40">
            <TextView android:textSize="@dimen/text_size_14sp" android:textColor="@color/black" android:gravity="center_horizontal" android:layout_gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size_4" android:text="姓名" android:layout_weight="3"/>
            <TextView android:textSize="@dimen/text_size_14sp" android:textColor="@color/black" android:gravity="center_horizontal" android:layout_gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size_4" android:text="投保类型" android:layout_weight="3"/>
            <TextView android:textSize="@dimen/text_size_14sp" android:textColor="@color/black" android:gravity="center_horizontal" android:layout_gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size_4" android:text="证件号" android:layout_weight="2"/>
            <TextView android:textSize="@dimen/text_size_14sp" android:textColor="@color/black" android:gravity="center_horizontal" android:layout_gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size_4" android:layout_marginRight="@dimen/size_4" android:text="联系电话" android:layout_weight="3"/>
        </LinearLayout>
        <ListView android:id="@+id/lv_content" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="@dimen/size_4"/>
    </LinearLayout>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/ll_bottom_page" android:layout_width="match_parent" android:layout_height="@dimen/size_40" android:layout_marginTop="@dimen/size_4" android:layout_marginBottom="@dimen/size_4" android:layout_alignParentBottom="true">
        <TextView android:textSize="@dimen/text_size_16sp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/pre_page" android:background="@mipmap/btn_quxiao_pre" android:padding="@dimen/size_6" android:layout_width="@dimen/size_87" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size_10" android:text="上一页" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/text_size_16sp" android:textColor="@color/black" android:id="@+id/pages" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/text_size_16sp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/next_page" android:background="@drawable/big_conner_new" android:padding="@dimen/size_6" android:layout_width="@dimen/size_87" android:layout_height="wrap_content" android:layout_marginRight="@dimen/size_10" android:text="下一页" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
