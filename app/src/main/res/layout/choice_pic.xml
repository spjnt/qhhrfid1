<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_pop_layout"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/sv_get_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:layout_marginLeft="@dimen/size_50"
        android:layout_marginRight="@dimen/size_50"
        android:background="@drawable/bottom_big_conner"
        android:gravity="center"
        android:text="从相册中选择"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/sv_take_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:layout_marginLeft="@dimen/size_50"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginRight="@dimen/size_50"
        android:background="@drawable/bottom_big_conner"
        android:gravity="center"
        android:text="拍照"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/sv_cancle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:layout_marginLeft="@dimen/size_50"
        android:layout_marginTop="@dimen/size_40"
        android:layout_marginRight="@dimen/size_50"
        android:layout_marginBottom="@dimen/size_5"
        android:background="@drawable/bottom_big_conner"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/black" />
</LinearLayout>
