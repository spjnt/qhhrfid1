<?xml version="1.0" encoding="utf-8"?>
<tramais.hnb.hhrfid.ui.view.CustomCameraView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cc_camera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/imv_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/size_10"
            android:background="@drawable/small_conner_new"
            android:paddingLeft="@dimen/size_8"
            android:paddingTop="@dimen/size_5"
            android:paddingRight="@dimen/size_8"
            android:paddingBottom="@dimen/size_5"
            android:text="@string/complete"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12sp"
            android:visibility="visible"
            tools:ignore="TextContrastCheck" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btn_showcamera"
            android:layout_toRightOf="@id/imv_gallery">

            <ImageView
                android:id="@+id/iv_flash"
                android:layout_width="@dimen/size_25"
                android:layout_height="@dimen/size_25"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/flash_open" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/btn_showcamera"
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_50"

            android:layout_centerInParent="true"
            android:background="@drawable/iv_border"
            android:src="@android:drawable/ic_menu_camera"
            tools:ignore="SpeakableTextPresentCheck" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/imv_pic"
            android:layout_toRightOf="@id/btn_showcamera"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_floder"
                android:layout_width="@dimen/size_25"
                android:layout_height="@dimen/size_25"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@mipmap/floder" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imv_pic"
            android:layout_width="@dimen/size_60"
            android:layout_height="@dimen/size_60"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_border"
            android:scaleType="centerInside" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/scan_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_8"

            android:textColor="@color/red"
            android:textSize="@dimen/text_size_20sp" />
    </LinearLayout>
</tramais.hnb.hhrfid.ui.view.CustomCameraView>
